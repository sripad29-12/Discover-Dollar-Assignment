# ---------- Build stage ----------
FROM node:18-alpine AS build

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the source code
COPY . .

# Build Angular app for production
RUN npm run build -- --configuration production

# ---------- Runtime stage ----------
FROM node:18-alpine AS runtime

WORKDIR /app

# Copy built Angular files from build stage
COPY --from=build /app/dist/angular-15-crud ./dist

# Frontend container does not serve files itself.
# Nginx container in docker-compose.yml will serve /dist

# Expose internal port for Docker network (optional)
EXPOSE 80

# Keep container alive (optional for CI/CD consistency)
CMD ["sleep", "infinity"]